<h1>
  Add a new insurance plan
</h1>


<hr>

<form action="/create_insurance_plan" method="post">
  <div class="form-group">
    <label for="plan_name">
      Plan name
    </label>

    <input type="text" id="plan_name" name="plan_name" class="form-control">
  </div>
  
  <div class="form-group">
    <label for="coinsurance_paid_by_patient">
      Coinsurance paid by patient as % (enter whole numbers please)
    </label>

    <input type="text" id="coinsurance_paid_by_patient" name="coinsurance_paid_by_patient" class="form-control">
  </div>

  <div class="form-group">
    <label for="deductible">
      Annual deductible
    </label>

    <input type="text" id="deductible" name="deductible" class="form-control">
  </div>

  <div class="form-group">
    <label for="monthly_premium">
      Monthly base premium
    </label>

    <input type="text" id="monthly_premium" name="monthly_premium" class="form-control">
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Add new insurance plan
  </button>
</form>

<hr>

<a href="/insurance_plans">
  Go back
</a>
